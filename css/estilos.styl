morado_oscuro_4 = #4a148c
morado_profundo = #673ab7
morado_oscuro_profundo_3 = #4527a0
teal_claro_2 = #4db6ac
rojo_oscuro_2 = #d32f2f
azul_iconos = #175C86
azul_fondo = #146AA0

div.contenedor
  border-right .5px dashed transparent

  .row
    /*border 1px dotted blue*/
    margin 0

  /* Estilos parte superior */
  header
    background rojo_oscuro_2
    font-family: 'Boogaloo', cursive;

    &>div
      /*border 1px dotted blue*/
      color white
      h2
        font-size 5em
      h5
        font-size 2em

    div.avatar
      text-align center

      img
        border-radius 50%


  /* Estilos sección de perfíl */
  div.boxPerfil
    font-family: 'Oswald', sans-serif;
    font-size 1.3em
    padding-bottom 10%
    padding-top 2%

    &>h5
      text-align center

    #test1,#test2,#test3
        color rgba(0,0,0, .7);

    div#test1
      span.iconIngeniero
        color azul_iconos
        &:before
          content "\e902"
          font-family 'fuente1'
          font-size 14em

    div#test2
      span.iconDev
        color azul_iconos
        &:before
          content "\e901"
          font-family 'fuente1'
          font-size 14em

    div#test3
      span.iconEmprendedor
        color azul_iconos
        &:before
          content "\e905"
          font-family 'fuente1'
          font-size 14em

  div.skills
    background azul_fondo
    padding-bottom 10%
    padding-top 2%

    .html5
      span.html5
        color white
        &:before
          content "\e636"
          font-family 'fuente2'
          font-size 8em

    .css3
      span.css3
        color white
        &:before
          content "\e649"
          font-family 'fuente2'
          font-size 8em

    .jscript
      span.jscript
        color white
        &:before
          content "\e64e"
          font-family 'fuente2'
          font-size 8em

    .meteor
      span.meteor
        color white
        &:before
          content "\e6a5"
          font-family 'fuente2'
          font-size 8em

    .bootstrap
      span.bootstrap
        color white
        &:before
          content "\e647"
          font-family 'fuente2'
          font-size 8em

    .materialize
      span.materialize
        color white
        &:before
          content "\e6b6"
          font-family 'fuente2'
          font-size 8em

    .git
      span.git
        color white
        &:before
          content "\e602"
          font-family 'fuente2'
          font-size 8em

    .stylus
      span.stylus
        color white
        &:before
          content "\e659"
          font-family 'fuente2'
          font-size 8em

    .jquery
      span.jquery
        color white
        &:before
          content "\e650"
          font-family 'fuente2'
          font-size 8em

  div.row
    /*border 1px dotted blue*/

    div.col
      /*border 1px solid violet*/
      text-align center

@media (max-width: 600px){
  header{
    padding-top 2%
  }

  header>div{
    text-align:center;
  }
}

@media (min-width: 993px){
  header{
    padding-bottom:16%;
    padding-top:16%;
  }

}
